@model IEnumerable<POCO.CompanyInfo>

@{
    ViewBag.Title = "Companies List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">

                    <h5>List of Companie</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-plus"></i>
                            @Html.ActionLink("Add Company", "Create")
                        </a>
                    </div>

                </div>

                <div class="ibox-content">
                    <table class="footable table table-stripped toggle-arrow-tiny">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyNameAr)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyNameEn)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FooterLine1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FooterLine2)
                                </th>
                                <th>Logo</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyNameAr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyNameEn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fax)
                                    </td>
                                    <td>
                                        @{
                                            var FooterLine1 = String.Concat(item.FooterLine1.Take(25));
                                            var FooterLine2 = String.Concat(item.FooterLine2.Take(25));
                                        }

                                        @Html.DisplayFor(modelItem => FooterLine1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => FooterLine2)
                                    </td>
                                    <td>
                                        <img class="img-responsive" width="50" height="50" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Img)" />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID, onclick = "return confirm('Are you sure?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        @*<tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
